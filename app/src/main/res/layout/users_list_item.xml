<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.edushare.lsizadanie.model.User" />

        <variable
            name="listener"
            type="eu.adamgiergun.lsi.util.ClickListener" />
    </data>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> listener.onClick(user)}"
        app:cardBackgroundColor="@color/background_color"
        tools:context=".users.userslist.UsersListFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/avatar_view"
                android:layout_width="@dimen/list_avatar_size"
                android:layout_height="@dimen/list_avatar_size"
                android:contentDescription="@string/user_avatar"
                android:padding="8dp"
                app:avatar_url="@{user.avatarUrl}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{user.name}"
                app:layout_constraintBottom_toTopOf="@+id/source_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/avatar_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/source_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{user.sourceApi}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/avatar_view"
                app:layout_constraintTop_toBottomOf="@+id/user_view" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>